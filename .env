# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Server Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=api

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# ============================================
# REDIS CONFIGURATION
# ============================================

# Redis Connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Keys
REDIS_BIDS_KEY=bids
REDIS_ASKS_KEY=asks
REDIS_DEPTH_CHANNEL=depth:update

# Redis TTL (in seconds)
REDIS_KEY_TTL=600

# Redis Retry Configuration
REDIS_RETRY_ATTEMPTS=3
REDIS_RETRY_DELAY=1000

# ============================================
# EXCHANGE (CCXT) CONFIGURATION
# ============================================

# Exchange Settings
EXCHANGE_NAME=binance
TRADING_SYMBOL=BTC/USDT

# Exchange API Credentials (optional for public data)
EXCHANGE_API_KEY=
EXCHANGE_API_SECRET=

# Fetch Settings
DEPTH_LEVELS=20
UPDATE_INTERVAL_MS=2000
EXCHANGE_TIMEOUT=10000

# Exchange Retry Settings
EXCHANGE_MAX_RETRY_ATTEMPTS=3
EXCHANGE_RETRY_DELAY_MS=1000
EXCHANGE_RETRY_BACKOFF=2

# Exchange Rate Limiting
EXCHANGE_RATE_LIMIT=true

# ============================================
# WEBSOCKET CONFIGURATION
# ============================================

# WebSocket Path
WS_PATH=/ws/depth

# Connection Limits
WS_MAX_CONNECTIONS=100

# WebSocket CORS
WS_CORS_ORIGIN=*
WS_CORS_CREDENTIALS=true

# Heartbeat Settings
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=5000

# Data Settings
WS_TOP_LEVELS=10

# ============================================
# RATE LIMITING CONFIGURATION
# ============================================

# Global Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX_REQUESTS=10

# Market Endpoint Rate Limiting
RATE_LIMIT_MARKET_TTL=60000
RATE_LIMIT_MARKET_MAX_REQUESTS=10

# ============================================
# MARKET ORDER CONFIGURATION
# ============================================

# Order Size Limits
MIN_ORDER_SIZE=0.0001
MAX_ORDER_SIZE=1000

# Precision Settings
PRICE_PRECISION=2
QUANTITY_PRECISION=8

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Log Level (log, error, warn, debug, verbose)
LOG_LEVEL=log

# Debug Mode
DEBUG=false

# Verbose Logging
VERBOSE=false

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/Disable Features
ENABLE_METRICS=false
ENABLE_HEALTH_CHECK=true
ENABLE_SWAGGER=false

